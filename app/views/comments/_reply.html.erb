<li><%= reply.comment %> -
<small>Submitted <%= time_ago_in_words(reply.created_at) %> ago</small>
<% if can? :update, reply %>
    <%= link_to "Edit", edit_comment_comment_path(reply.commentable, reply),class: "btn btn-info"%>
<% end %>
<% if can? :destroy, reply %>
	<%= link_to "Delete", [reply.commentable, reply], method: :delete, data: { confirm: "Are you sure?" },class: "btn btn-danger"%>
<% end %>