<li><%= reply.comment %> -
<small> Posted by <%= link_to reply.user.profile.name, profile_path(reply.user.profile.id) %> <%= time_ago_in_words(reply.created_at) %> ago</small>
<% if can? :update, reply %>
    <%= link_to "Edit", edit_comment_comment_path(reply.commentable, reply),class: "comments-small-btns"%>
<% end %>
<% if can? :destroy, reply %>
	<%= link_to "Delete", [reply.commentable, reply], method: :delete, data: { confirm: "Are you sure?" },class: "comments-small-btns"%>
<% end %>