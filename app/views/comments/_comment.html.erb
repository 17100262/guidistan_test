<div class="panel panel-default">
  <div class="panel-body">
    <h4><%= comment.comment %></h4>
    <p>Posted by <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %></p>
    <% if can? :update, comment %>
      <%= link_to "Edit", edit_post_comment_path(comment.post, comment),class: "btn btn-info"%>
    <% end %>
    <% if can? :destroy, comment %>
    <%= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure?" },class: "btn btn-danger"%>
    <% end %>
  </div>
</div>
