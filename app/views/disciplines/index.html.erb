<div class="container-fluid" >
  <br/>
<% if can? :create, Discipline.new %>
  <%= link_to 'New Discipline', new_discipline_path ,class:"btn btn-success pull-right" %>
<% end %>
  <%= form_tag :controller => :disciplines, :action => :export do %>
    <%= submit_tag "Download in Excel", class: "btn btn-primary pull-right", id: "export" %>
  <% end %>
  <div class="services container" >
    <p id="notice"><%= notice %></p>
    <div align="center"> <h1  class="post-title-forum post-title-all-posts" style="">Explore Disciplines</h1> </div>
    <div class = "container" style="margin-top:60px;">
        <ul class="forum-dis-container">
            <% @disciplines.each do |discipline| %>
              <li class="forum-dis-list col-md-6">
                
                  <div class="forum-image-container"> <%= image_tag discipline.image.url(:large) , :class => "image_thumb_forum"%></div>
                  <div class="forum-list-link"> <%= link_to discipline.name, discipline %></div>
                  
                  
              </li>
            <% end %>
        </ul>
    </div>
</div> 
</div>

<!------------ Personality test Box -->
<section>
  <div class ="container well"><p>
    <img src="/StudentsSmall.jpg" alt="" class="logo pull-left"/>
    <h2 style="margin:0">Take a Free Personality Test!</h2>
    <h5 style="margin:0">Find out which Programmes match your personality!</h5>
    <a href="#"><h5 style="color:#009cda">Take the Test</h5></a>
    </p>
  </div>
</section>
