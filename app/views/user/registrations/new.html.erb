<section class="page-header">
    <div class="container">
        <h1>Sign Up</h1>
        <!-- breadcrumbs -->
    </div>
</section>

<div class="container register-form-main-page">

    <div class="col-md-6 col-sm-6 registeration-form-container">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'nomargin sky-form boxed', novalidate: false } )   do |f| %>
            <%= devise_error_messages! %>
  
            <header>
                <i class="fa fa-users"></i> Register
            </header>
            <fieldset class="nomargin">                   
                <div class="form-inputs">
                    <%= f.fields_for :profile_attributes do |f| %>
                        <label class="input margin-bottom-10">
                            <%= f.input_field :name,required: true , placeholder: "Name"  %>
                        </label>
                        <!--<label class="select margin-bottom-10 margin-bottom-10 margin-top-10">            -->
                        <!--  <= f.select :gender,[["Gender","Gender"],["Male","Male"],["Female","Female"]] %>-->
                        <!--  <i></i>-->
                        <!--</label>-->
                        <!--<label class="input margin-bottom-10">-->
                        <!--  <= f.input_field :city, placeholder:"City" %>-->
                        <!--</label>-->
                    <% end %>
                    <label class="input margin-bottom-10"> 
                        <%= f.input_field :email, required: true, placeholder: "Email" %>
                    </label>
                 
                    <label class="input margin-bottom-10">
                    
                        <%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , placeholder: "Password" %>
                    
                    </label>
                    <label class="input margin-bottom-10">
                        <%= f.input_field :password_confirmation, required: true , placeholder: "Confirm Password" %>
                    </label>
                </div>
            
                <div class="form-actions">
                    <%= f.button :submit, "Sign up", class: "btn btn-primary noradius pull-right" %>
                </div>
            </fieldset>
        <% end %>
    </div> <!--Col-md-6 Forum Container-->

    <div class="col-md-6 col-sm-6">
        <form action="#" method="post" class="sky-form boxed">
            <header class="size-18 margin-bottom-20">
                Register using your favourite Social Network
            </header>
            <fieldset class="nomargin">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <!--<a class="btn btn-block btn-social btn-facebook margin-bottom-10">-->
                        <!--<i class="fa fa-facebook"></i> Sign up with Facebook-->
                        <!--</a>-->
                        <%= link_to '<i class="fa fa-facebook"></i>Sign in with Facebook'.html_safe, user_facebook_omniauth_authorize_path,:class => "btn btn-block btn-social btn-facebook margin-bottom-10" %>
                        <!--<a class="btn btn-block btn-social btn-twitter margin-bottom-10">-->
                        <!--<i class="fa fa-twitter"></i> Sign up with Twitter-->
                        <!--</a>-->
                        <!--<a class="btn btn-block btn-social btn-google margin-bottom-10">-->
                        <!--<i class="fa fa-google-plus"></i> Sign up with Google-->
                        <!--</a>-->
                        <%= link_to '<i class="fa fa-google" aria-hidden="true"></i>Sign in with Google'.html_safe, user_google_oauth2_omniauth_authorize_path ,:class => "btn btn-block btn-social btn-google margin-bottom-10" %>
                    </div>
                </div>
            </fieldset>
            <footer>
                Already have an account? <strong><%= link_to 'Log In' , 'sign_in'  %></strong>
            </footer>
        </form>
    </div>
</div>
