<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Discipline:</strong>
  <%= @post.discipline.name %>
</p>
<% if can? :update, @post %>
  <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
<h3>Comments</h3>
<%= render @post.comments %>
<h3> Reply to thread</h3>
<%= render "comments/form" %>
</br>
<%= link_to 'Back', {:controller => "posts", :action => "index", :filter_id => @post.discipline_id },class: "btn btn-primary" %>
</div>