<%= bootstrap_form_for(@ngo) do |f| %>
  <% if @ngo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ngo.errors.count, "error") %> prohibited this subdiscipline from being saved:</h2>

      <ul>
      <% @ngo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, placeholder: "Name", hide_label: true  %>
  </div>
  
  <div class="field">
    <%= f.select :level, [["Intermediate","Intermediate"],["Bachelors","Bachelors"],["Masters","Masters"]] %>
  </div>

  <div class="field">
    <%= f.text_area :description, placeholder: "Description goes here", hide_label: true  %>
  </div>
  
  <div class="field">
    <%= f.text_field :category, placeholder: "Intermediate/Bachelors/Masters", hide_label: true  %>
  </div>
  
  <div class="field">
    <%= f.text_field :link, placeholder: "URL/Link", hide_label: true  %>
  </div>
  
  <div class="field">
    <%= f.text_field :lastdate, placeholder: "Last date", hide_label: true  %>
  </div>
  
  <div class="field">
    <%= f.text_field :criteria, placeholder: "Eligibility Criteria", hide_label: true  %>
  </div>
  
  <div class="field">
    <%= f.text_area :procedure, placeholder: "How To Apply", hide_label: true  %>
  </div>
  
  <div class="actions">
    <%= link_to 'Cancel', ngos_path, class: "btn btn-info"  %>
    <%= f.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>
