<div class="container">
<p id="notice"><%= notice %></p>
  <%= link_to 'New City', new_city_path, class: "btn btn-success pull-right" %>
<h2  class="post-title-forum post-title-all-posts" style="">All Cities</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= link_to city.name, city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

