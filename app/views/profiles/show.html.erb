<div class="container showsingle-profile">
    <div class="profile_header">
      
      <% if user_signed_in? and current_user==@profile.user %>
        <h3>My Profile</h3>
      <% end %> 
    </div>
   
        
      <div class="row ">
          <div class="col-md-12 profile-page-leftside-container">
            <div class="col-md-3 col-sm-3 col-xs-12">
              <div class="profile_detail">
                <div class="image_box">
                  <% if @profile.image_file_name.present? %> 
                  <%= image_tag @profile.image.url(:large) %>
                  <% else %>
                  
                  <a href="javascript:;">
                  <img src="/avatar_generic.jpg" width="100" alt="User Profile Image">
                  </a>
                  <% end %>
                </div>
                <div class="reputation">
                  <%= @profile.reputation %> <span>REPUTATION</span>
                </div>
              </div>
            </div>
            <div class="col-md-9 col-sm-9 col-xs-12 text-center">
              <div class="detail_holder">
                <div>
                  <i class="fa fa-user" aria-hidden="true"></i>
                  <label><%= @profile.name %> 
                    <% if (@profile.user.has_role? :admin) %>
                         <div class = "adm">
                    	   Admin</div>
                    <% elsif (@profile.user.has_role? :moderator) %>
                         <div class = "mod">
                    	   Moderator</div>
                    <% end %>
                  </label>
                </div>
                <div class="gender">
                  <i class="fa fa-venus-mars" aria-hidden="true"></i>
                  <label>Gender:</label>
                  <span><%= @profile.gender %></span>
                </div>
                <div class="member_detail">
                  <i class="fa fa-history" aria-hidden="true"></i>
                  <label>Member for:</label>
                  <span><%= time_ago_in_words(@profile.created_at) %></span>
                </div>
                <div class="view_detail">
                  <i class="fa fa-eye" aria-hidden="true"></i>
                  <label>Profile views:</label>
                  <span><%= "#{@profile.impressionist_count}" %></span>
                </div>
                <div class="question_detail">
                  <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                  <label>Questions:</label>
                  <span><%= @profile.user.posts.count %></span>
                </div>
                 <div class="question_detail">
                  <i class="fa fa-check-square-o" aria-hidden="true"></i>
                  <label>Answers:</label>
                  <span><%= @profile.user.comments.where(commentable_type:"Post").count %></span>
                </div>
                <div class="active_detail">
                  
                  <% if @profile.user.last_sign_in_at.present? %>
                  <i class="fa fa-clock-o" aria-hidden="true"></i>
                  <label>Last Sign in</label>
                  <span><%= time_ago_in_words(@profile.user.last_sign_in_at) %> ago</span>
                  <% end %>
                </div>
              </div>
              <%= link_to 'Edit Profile', edit_profile_path(:id => current_user.profile.id), class: "btn btn-sm btn-primary edit-profile-btn" %>
            </div>
          </div>
          
          <div class="col-md-3 hidden">
          <ul class="list-group">
              <li class="list-group-item text-center" contenteditable="false"><strong>Profile</strong></li>
              <li class="list-group-item text-center"><strong>City: <%= @profile.city %></strong></li>
              <li class="list-group-item text-center"><strong>Gender: </strong></li>
              <li class="list-group-item text-center"><strong>Reputation: <%= @profile.reputation %> Points</strong></li>
              <li class="list-group-item text-center"><strong>Member for <%= time_ago_in_words(@profile.created_at) %></strong></li>
              <li class="list-group-item text-center"><strong> </strong></li>
              <% if @profile.user.last_sign_in_at.present? %>
              <li class="list-group-item text-center"><strong>Last active <%= time_ago_in_words(@profile.user.last_sign_in_at) %> ago</strong></li>
              <% end %>
              <li class="list-group-item text-center"><strong><%= @profile.user.posts.count %> Questions</strong></li>
              <li class="list-group-item text-center"><strong><%= @profile.user.comments.where(commentable_type:"Post").count %> Answers</strong></li>
  
              
              <!--<li class="list-group-item text-center"></li>-->
              <!--<li class="list-group-item text-center"></li>-->
          </ul>
          
      
      </div>
    </div>
    
