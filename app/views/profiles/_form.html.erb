
 
 <div class="newPostForm editprofileForm">
  <%= form_for (@profile), html: { multipart: true } do |f| %>
  
   <div class="field">
     <%= f.label :Name %>
     <%= f.text_field :name %><br />
   </div>
   
    <div class="field">
     <%= f.label :Gender %>
     <%= f.select :gender,[["Male","M"],["Female","F"]] %> <br />
   </div>
   
    <div class="field">
     <%= f.label :City %>
     <%= f.collection_select :city_id,City.all,:id,:name %><br/>
    <%#= f.select :city_id %><br />
   </div>
   
   
   
   <%= f.fields_for :interest_attributes do |ff| %>
    <%#= @profile.errors.full_messages.first if @profile.errors.any? %>
     <div class="field">
      <%= f.label :Interests %>
       <%= ff.text_field :interest_list, 'data-tokeninput' => { collection: @names ,options: @options}.to_json %>
      </div>
      
   <div class="field">
     <%= f.label :Image %>
     <%= f.file_field :image %>
   </div>
   <div class="button-contianer" style="width:85%;">
    <% end %>
      <%= f.submit "Edit" %>
    <% end %>
  </div>
 </div>


 

