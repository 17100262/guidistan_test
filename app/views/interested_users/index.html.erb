<div class="container">
    <table class = "table table-striped table-bordered table-hover  alluser-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone_number %></td>
                    <td><%= link_to 'View Profile',"profiles/#{user.user.profile.id}", :class => 'btn btn-xs btn-primary', :role => "button" %>
        </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
    
</div>