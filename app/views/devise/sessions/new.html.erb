<div class="container register-form-main-page">
	
	<div class="col-md-6 col-sm-6">
		<form action="#" method="post" class="sky-form boxed">
			
			<header class="size-18 margin-bottom-20">
				Sign In using your favourite social network
			</header>
			
			<fieldset class="nomargin">
				
				<div class="row">
				
					<div class="col-md-8 col-md-offset-2">
						<%= link_to '<i class="fa fa-facebook"></i>Sign in with Facebook'.html_safe, user_facebook_omniauth_authorize_path,:class => "btn btn-block btn-social btn-facebook margin-bottom-10" %>
						<%= link_to '<i class="fa fa-google" aria-hidden="true"></i>Sign in with Google'.html_safe, user_google_oauth2_omniauth_authorize_path ,:class => "btn btn-block btn-social btn-google margin-bottom-10" %>
					</div>
				</div>
				
			</fieldset>
			
			<footer>
				<p>Don't have an account yet? </p>
				<strong><%= link_to "Click to register!", new_registration_path(resource_name),:style=>'color:#8ab933;'  %></strong><br />
			</footer>
		</form>
	</div>

	<div class="col-md-6 col-sm-6 registeration-form-container login-form-container">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'sky-form boxed', novalidate: false }) do |f| %>
		
			<header class="size-18 margin-bottom-20"> I'm a returning Member</header>
			
			<fieldset class="nomargin">
				<div class="form-inputs">
					<label class="input margin-bottom-10"> 
				       <%= f.input_field :email, required: true, autofocus: true , placeholder: "Email"%>
				    </label>
				    <label class="input margin-bottom-10"> 
				    	<%= f.input_field :password, required: true , placeholder: "Password"%>
				    </label>
				    <div class="clearfix note margin-bottom-30">
				    	<h5><%= link_to "Forgot Password?", new_password_path(resource_name),{:style=>'color:#8ab933;', :class => "pull-right"} %></h5>
					</div>
					<label class="checkbox weight-300 margin-bottom-20 hide-label-checkbox" style="display:inline-block;">
						<%= f.input_field :remember_me, as: :boolean if devise_mapping.rememberable? %> 
						<div class="label-remember-me">Remember Me</div>
					</label>
				    <div class="form-actions pull-right login-btn-main">
						<%= f.button :submit, "Log in" , :class => "btn btn-success" %>
				    </div>
				</div>
			</fieldset>
			
		<% end %>
	
	</div>



</div>
